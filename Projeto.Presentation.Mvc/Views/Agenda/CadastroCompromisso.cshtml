@model Projeto.Presentation.Mvc.Models.CompromissoCadastroModel
@using Projeto.Infra.Data.Enums

@{
    ViewData["Title"] = "CadastroCompromisso";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h5>CadastroCompromisso</h5>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-6">

            <label>Título do compromisso:</label>
            @Html.TextBoxFor(model => model.Titulo, 
            new
            {
                @class = "form-control",
                @placeholder = "Digite aqui"
            })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Titulo)
            </span>
            <br />

            <label>Categoria do compromisso:</label>
            @Html.DropDownListFor(model => model.Categoria,
                Html.GetEnumSelectList(typeof(Categoria)),
                "Escolha uma opção",
            new
            {
                @class = "form-control",
        
            })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Categoria)
            </span>
            <br />

            <label>Descrição do compromisso:</label>
            @Html.TextAreaFor(model => model.Descricao,
            new
            {
                @class = "form-control",
                @placeholder = "Digite aqui"
            })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Descricao)
            </span>
            <br />

            <input type="submit" value="Cadastrar Compromisso" class="btn btn-success btn-sm"/>

        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                <label>Data de Inicio: </label>
                @Html.TextBoxFor(model => model.DataInicio,
                new
                {
                    @class = "form-control",
                    @type = "date"
                })
                <span class="text-danger">
                    @Html.ValidationMessageFor(model => model.DataInicio)
                </span>
                <br />
                </div>

                <div class="col-md-6">
                <label>Data de Término: </label>
                @Html.TextBoxFor(model => model.DataFim,
                new
                {
                    @class = "form-control",
                    @type = "date"
                })
                <span class="text-danger">
                    @Html.ValidationMessageFor(model => model.DataFim)
                </span>
                <br />
                </div>         
        </div>

            <div class="row">
                <div class="col-md-6">
                <label>Hora de Inicio: </label>
                @Html.TextBoxFor(model => model.HoraInicio,
                new
                {
                    @class = "form-control",
                    @placeholder = "00:00"
                })
                <span class="text-danger">
                    @Html.ValidationMessageFor(model => model.HoraInicio)
                </span>
                <br />
                </div>

                <div class="col-md-6">
                <label>Hora de Término: </label>
                @Html.TextBoxFor(model => model.HoraFim,
                new
                {
                    @class = "form-control",
                    @placeholder = "00:00"
                })
                <span class="text-danger">
                    @Html.ValidationMessageFor(model => model.HoraFim)
                </span>
                <br />
                </div>
            </div>
        </div>
    </div>
}
